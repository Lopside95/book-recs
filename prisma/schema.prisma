model Author {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model Genre {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model Rating {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    bookRating Int
}

