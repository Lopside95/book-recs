datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model Book {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    genre  String
    author String
    rating Int
    title  String
}

